<wso2as-web xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://wso2.org/2016/wso2as-web"
            xsi:schemaLocation="http://wso2.org/2016/wso2as-web wso2as-web.xsd">
    <class-loader>
        <environments>CXF</environments>
    </class-loader>

    <saml2-single-sign-on>
        <!-- The list of URIs to be skipped when processing SAML 2.0 based single-sign-on or single-logout -->
        <!--<skip-uris>
            <skip-uri>https://localhost:8443/</skip-uri>
        </skip-uris>-->

        <!-- Enable/disable the option to automatically redirect the consumer URL from the acs page after single-logout. -->
        <handle-consumer-url-after-slo>true</handle-consumer-url-after-slo>

        <!-- Additional query parameters that can be passed along with a SAML 2.0 Authentication Request URL. -->
        <!--<query-params>paramOne=valOne&amp;paramTwo=valTwo</query-params>-->

        <!-- The Application Server URL -->
        <application-server-url>https://localhost:8443</application-server-url>

        <!-- Enable/disable SAML 2.0 based Web Browser single-sign-on (SSO) profile. This is disabled by default. -->
        <enable-sso>false</enable-sso>

        <!-- The postfix to a URL which identifies a SAML 2.0 Authentication Request -->
        <request-url-postfix>samlsso</request-url-postfix>

        <!-- The SAML 2.0 based binding type used for SAML 2.0 Request sending -->
        <http-binding>urn:oasis:names:tc:SAML:2.0:bindings:HTTP-POST</http-binding>

        <!-- The postfix to a URL in order to identify the SAML 2.0 Assertion Consumer -->
        <consumer-url-postfix>/acs</consumer-url-postfix>

        <!-- TODO: CHECK WITH THE SPEC -->
        <attribute-consuming-service-index>1784849</attribute-consuming-service-index>

        <!-- Enable/disable SAML 2.0 based Single-Logout (SLO) Profile. This is disabled by default. -->
        <enable-slo>false</enable-slo>

        <!-- The postfix to a URL which identifies a SAML 2.0 Single Logout Request.  -->
        <slo-url-postfix>logout</slo-url-postfix>

        <!-- Enable/disable SAML 2.0 Assertion encryption. -->
        <enable-assertion-encryption>false</enable-assertion-encryption>

        <!-- Enable/disable the application of digital signature to SAML 2.0 Assertions. -->
        <enable-assertion-signing>false</enable-assertion-signing>

        <!-- Enable/disable the application of digital signature to SAML 2.0 based Requests. -->
        <enable-request-signing>false</enable-request-signing>

        <!-- Enable/disable the application of digital signature to SAML 2.0 based Responses. -->
        <enable-response-signing>false</enable-response-signing>

        <!--
            Enable/disable 'ForceAuthn' option of SAML 2.0 based Authentication Requests. This property
            if 'true' effectively forces the Identity Provider to authenticate the principal rather than
            relying on a previous security context.
        -->
        <is-force-authn>false</is-force-authn>

        <!-- TODO: CHECK WITH THE SPEC -->
        <is-passive-authn>false</is-passive-authn>
    </saml2-single-sign-on>

    <statistics-publisher>
        <enable-stats-publisher>false</enable-stats-publisher>
    </statistics-publisher>
</wso2as-web>
